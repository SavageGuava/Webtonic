@model Webtonic.Models.StudentModel
@{
    ViewData["Title"] = "AddNewStudent";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<form method="post" asp-action="AddNewStudent">
    <div class="border p-3">
        <div class="form-group row">
            <h2 class="text-black-50 pl-3">Add Student</h2>
        </div>
        @*<div asp-validation-summary="ModelOnly" class="text-danger"></div>*@
        <div class="row">
            <div class="col-12">
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="StudentNumber"></label>
                    </div>
                    <div class="col-4">
                        <label asp-for="Firstname"></label>
                    </div>
                    <div class="col-4">
                        <label asp-for="Surname"></label>
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-4">
                        <input asp-for="StudentNumber" class="form-control" />
                        <span asp-validation-for="StudentNumber" class="text-danger"></span>
                    </div>
                    <div class="col-4">
                        <input asp-for="Firstname" class="form-control" />
                        <span asp-validation-for="Firstname" class="text-danger"></span>
                    </div>
                    <div class="col-4">
                        <input asp-for="Surname" class="form-control" />
                        <span asp-validation-for="Surname" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="CourseCode"></label>
                    </div>
                    <div class="col-4">
                        <label asp-for="CourseDescription"></label>
                    </div>
                    <div class="col-4">
                        <label asp-for="Grade"></label>
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-4">
                        <input asp-for="CourseCode" class="form-control" />
                        <span asp-validation-for="CourseCode" class="text-danger"></span>
                    </div>
                    <div class="col-4">
                        <input asp-for="CourseDescription" class="form-control" />
                        <span asp-validation-for="CourseDescription" class="text-danger"></span>
                    </div>
                    <div class="col-4">
                        <input asp-for="Grade" class="form-control" />
                        <span asp-validation-for="Grade" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-8 offset-2 row">
                        <div class="col">
                            <input type="submit" class="btn btn-info w-75" value="Add Student" />
                        </div>
                        <div class="col">
                            <a asp-action="Index" class="btn btn-danger w-75">Back</a>
                        </div>
                    </div>
                </div>

            </div>
        </div>
    </div>
</form>

@section Scripts
{
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}

